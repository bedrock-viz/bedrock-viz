+        const int CHUNK = 64 * 1024;
+
+		int ret;
+		size_t have;
+		z_stream strm;
+		unsigned char *out = new unsigned char[CHUNK];
+
+		/* allocate inflate state */
+		strm.zalloc = Z_NULL;
