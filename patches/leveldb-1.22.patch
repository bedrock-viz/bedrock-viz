+			int res = deflate(&strm, Z_NO_FLUSH);
+			assert(res == Z_OK);
+			if (strm.avail_out == 0)
+			{
+				buffer.append(temp_buffer, temp_buffer + BUFSIZE);
+				strm.next_out = temp_buffer;
+				strm.avail_out = BUFSIZE;
+			}
+		}
+
+		while (deflate_res == Z_OK)
+		{
+			if (strm.avail_out == 0)
